<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.LobbyFragment">

    <TextView
        android:id="@+id/lobby_players_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/lobby_game_id_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Players"
        android:textSize="30dp"
        />


    <TextView
        android:id="@+id/lobby_game_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="gameId"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/lobby_players_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lobby_players_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lobby_add_edit_text"
        app:layout_constraintTop_toBottomOf="@id/lobby_players_text_view"
        tools:listitem="@layout/lobby_player_holder"
        />

    <EditText
        android:id="@+id/lobby_add_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/lobby_add_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lobby_start_btn"
        app:layout_constraintTop_toBottomOf="@id/lobby_players_recycler_view"
        android:hint="New player"
        />

    <Button
        android:id="@+id/lobby_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lobby_add_edit_text"
        app:layout_constraintBottom_toTopOf="@+id/lobby_start_btn"
        app:layout_constraintTop_toBottomOf="@id/lobby_players_recycler_view"
        android:text="Add"
        />

    <Button
        android:id="@+id/lobby_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lobby_add_edit_text"
        android:text="START GAME"
        />



</androidx.constraintlayout.widget.ConstraintLayout>