<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_image_view"
        android:layout_width="416dp"
        android:layout_height="416dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/main_detect_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unknown points"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/main_detect_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_image_view" />


    <Button
        android:id="@+id/main_detect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_camera_button"
        app:layout_constraintTop_toBottomOf="@+id/main_score_text"
        android:textStyle="normal"
        android:fontFamily="sans-serif"/>

    <Button
        android:id="@+id/main_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_detect_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_score_text"
        android:textStyle="normal"
        android:fontFamily="sans-serif"/>

</androidx.constraintlayout.widget.ConstraintLayout>